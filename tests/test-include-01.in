. $testdir/defs || exit 1

required=""

mkdir test || exit 1

cat > ./test/include-1 <<EOF
include "./include-2"
ext2:ext3
	cat \$I >> \$O
EOF

cat > ./test/include-2 <<EOF
ext3:ext4
	cat \$I >> \$O
EOF

cat > ./test/rules <<EOF
include "./include-1"
ext1:ext2
	cat \$I >> \$O
EOF

: >test.out || exit 1
: >test.exp || exit 1

$FCP_NOFLAGS -r ./test/rules -b >test.out || exit 1

cat > test.exp <<EOF
ext1 -> ext2
ext2 -> ext3
ext3 -> ext4
EOF

exit 0
