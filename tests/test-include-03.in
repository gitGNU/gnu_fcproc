required="diff"

. $testdir/defs || exit 1

mkdir -p includes/1   || exit 1
mkdir -p includes/2/a || exit 1

ABS_DIR=`pwd`/includes

cat >./includes/rules <<EOF
include "./1/include-1"
ext0:ext1
	cat \$I >> \$O
EOF

cat >./includes/1/include-1 <<EOF
include "../2/include-2"
ext1:ext2
	cat \$I >> \$O
EOF

cat >./includes/2/include-2 <<EOF
include "a/include-2a"
ext2:ext2a
	cat \$I >> \$O
EOF

cat >./includes/2/a/include-2a <<EOF
include "${ABS_DIR}/include-3"
ext2a:ext3
	cat \$I >> \$O
EOF

cat >$ABS_DIR/include-3 <<EOF
include "include-4"
ext3:ext4
	cat \$I >> \$O
EOF

cat >/$ABS_DIR/include-4 <<EOF
ext4:ext5
	cat \$I >> \$O
EOF

: >test.out || exit 1
: >test.exp || exit 1

$FCP_NOFLAGS -r ./includes/rules -b >test.out || exit 1

cat > test.exp <<EOF
ext0 -> ext1
ext1 -> ext2
ext2 -> ext2a
ext2a -> ext3
ext3 -> ext4
ext4 -> ext5
EOF

diff test.exp test.out || exit 1

exit 0
