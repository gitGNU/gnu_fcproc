. $testdir/defs || exit 1

required="diff"

cat > ./rules <<EOF
ext1:ext2
	cat   \$I >  \$O
	echo "12" >> \$O

ext2:ext3
	cat   \$I >  \$O
	echo "23" >> \$O

ext2:ext4
	cat   \$I >  \$O
	echo "24" >> \$O

ext3:ext5
	cat   \$I >  \$O
	echo "35" >> \$O

ext4:ext5
	cat   \$I >  \$O
	echo "45" >> \$O

ext5:ext6
	cat   \$I >  \$O
	echo "56" >> \$O
EOF

rm -f ./test1.ext1 || exit 1
touch ./test1.ext1
rm -f ./test2.ext6 || exit 1

mkdir ./test_dir || exit 1

$FCP -r ./rules -m 100 -s : -n -t ./test_dir test1.ext1:test2.ext6 || exit 1

exit 0
