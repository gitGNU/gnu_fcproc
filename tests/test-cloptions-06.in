required=""

. $testdir/defs || exit 1

cat > ./rules <<EOF
ext1:ext2
	cat \$I >> \$O

ext2:ext3
	cat \$I >> \$O

ext3:ext4
	cat \$I >> \$O
EOF

mkdir ./test.d || exit 1
: >test.ext1   || exit 1

$FCP -r ./rules -m 3 -t test.d test.ext1:test.ext3 \
                               test.ext2:test.ext4 || exit 1

exit 0
