. $testdir/defs || exit 1

required="diff"

cat > ./rules <<EOF
ext1:ext2
	echo "1" >> \$O
EOF

mkdir test_dir       || exit 1
chmod a-rwx test_dir || exit 1

touch ./test1.ext1 || exit 1
rm -f ./test2.ext5 || exit 1

$FCP -r ./rules -m 100 -s : -t ./test_dir test1.ext1:test2.ext6 || exit 1

exit 0
