. $testdir/defs || exit 1

required="diff"

cat > ./rules <<EOF
ext1:ext2
	cat   \$I >  \$O
	echo "10" >> \$O

ext2:ext3
	cat   \$I >  \$O
	echo "20" >> \$O
	echo "21" >> \$O

ext3:ext4
	cat   \$I >  \$O
	echo "30" >> \$O
	echo "31" >> \$O
	echo "32" >> \$O

ext4:ext5
	cat   \$I >  \$O
	echo "40" >> \$O
	echo "41" >> \$O
	echo "42" >> \$O
	echo "43" >> \$O
EOF

rm -f ./test1.ext1 || exit 1
touch ./test1.ext1
rm -f ./test2.ext5 || exit 1

mkdir ./test_dir || exit 1

$FCP -r ./rules -m 4 -s : -t ./test_dir test1.ext1:test2.ext5 || exit 1

rm -f test.exp || exit 1
cat > test.exp <<EOF
10
20
21
30
31
32
40
41
42
43
EOF

diff ./test.exp ./test2.ext5 || exit 1

exit 0
