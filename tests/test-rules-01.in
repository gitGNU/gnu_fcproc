. $testdir/defs || exit 1

required="diff"

cat > ./include-4 <<EOF
ext5:ext6
	command
EOF

cat > ./include-3 <<EOF
include "./include-4"
ext4:ext5
	command4
EOF

cat > ./include-2 <<EOF
include "./include-3"	
ext3:ext4
	command3
EOF

cat > ./include-1 <<EOF
include "./include-2"    
ext2:ext3
	command2
EOF

cat > ./rules <<EOF
include "./include-1"
ext1:ext2
	command1
EOF

mkdir test_dir || exit 1

$FCP_NOFLAGS -b -r ./rules                       -t ./test_dir > test1.exp || exit 1
$FCP_NOFLAGS -b -r ./rules -r ./rules            -t ./test_dir > test2.exp || exit 1
$FCP_NOFLAGS -b -r ./rules -r ./rules -r ./rules -t ./test_dir > test3.exp || exit 1

diff test1.exp test2.exp || exit 1
diff test2.exp test3.exp || exit 1

exit 0
