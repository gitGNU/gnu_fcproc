required="diff"

. $testdir/defs || exit 1

cat > ./rules <<EOF
ext1:ext2
	cat \$I  >> \$O
	echo "1" >> \$O

ext2:ext1
	cat \$I  >> \$O
	echo "2" >> \$O

ext2:ext3
	cat \$I  >> \$O
	echo "3" >> \$O

ext3:ext2
	cat \$I  >> \$O
	echo "4" >> \$O

ext3:ext4
	cat \$I  >> \$O
	echo "5" >> \$O

ext4:ext3
	cat \$I  >> \$O
	echo "6" >> \$O

ext4:ext1
	cat \$I  >> \$O
	echo "7" >> \$O
EOF

rm -f ./test1.ext1 || exit 1
touch ./test1.ext1
rm -f ./test2.ext4 || exit 1

mkdir ./test_dir || exit 1

$FCP -r ./rules -m 100 -s : -t ./test_dir test1.ext1:test2.ext4 || exit 1

rm -f test.exp || exit 1
cat > test.exp <<EOF
1
3
5
EOF

diff ./test.exp ./test2.ext4 || exit 1

exit 0
